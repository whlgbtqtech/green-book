
//- # layout

doctype
html.no-js
  head
    title= typeof title === 'string' ? 'Eskimo - ' + title : 'Eskimo - Rapid MVP'
    block meta
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='description', content='This rapid MVP was built with Eskimo.')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      meta(name='_csrf', value=csrf)
      if settings.server.env !== 'production'
        meta(name='robots' content='noindex')
        meta(name='googlebot' content='noindex')

    link(href='/css/app-6d730e29.css', rel='stylesheet' )
    script(src='/js/modernizr-9d550bd1.js', type='text/javascript' )
  body
    //- Browse Happy
    //- <http://browsehappy.com/>
    != "<!--[if lt IE 8]>"
    p.browsehappy
      = 'You are using an '
      strong outdated
      = ' browser. Please '
      a(href="http://browsehappy.com/") upgrade your browser
      = ' to improve your experience.'
    != "<!--<![endif]-->"
    block messages
      include _messages.jade
    block content
    script(src='/js/app-2d74e4f1.js', type='text/javascript' )